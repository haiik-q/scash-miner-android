<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#1a1a1a">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scash Miner"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="钱包地址 (Wallet Address):"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/walletAddressInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="scash1..."
        android:textColor="#ffffff"
        android:textColorHint="#888888"
        android:background="#2a2a2a"
        android:padding="12dp"
        android:textSize="14sp"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/addressValidation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#ff0000"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="矿池 (Mining Pool):"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="pool.scash.pro:7777"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="挖矿线程数 (Threads):"
            android:textSize="16sp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/cpuCoresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CPU: 4核"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginEnd="12dp" />

        <Spinner
            android:id="@+id/threadSpinner"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#2a2a2a"
            android:padding="8dp"
            android:popupBackground="#2a2a2a" />

    </LinearLayout>

    <Button
        android:id="@+id/startMiningButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="开始挖矿 (Start Mining)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#00aa00"
        android:textColor="#ffffff"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="状态 (Status):"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="未开始"
        android:textSize="14sp"
        android:textColor="#ffff00"
        android:background="#2a2a2a"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算力 (Hashrate):"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/hashrateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0.00 H/s"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#00ff00"
        android:background="#2a2a2a"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2a2a2a">

        <TextView
            android:id="@+id/logText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日志 (Log):\n"
            android:textSize="12sp"
            android:textColor="#cccccc"
            android:padding="12dp"
            android:fontFamily="monospace" />
    </ScrollView>

</LinearLayout>
